<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="murali.launchermodetestapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LauncherModeHomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Single Top Activities list -->

        <activity android:name=".singletop.MainActivity" />
        <activity android:name=".singletop.Main2Activity" />
        <activity
            android:name=".singletop.Main3Activity"
            android:launchMode="singleTop" />

        <!-- Single Task Activities list -->

        <activity android:name=".singletask.SingleTaskActivity1" />
        <activity
            android:name=".singletask.SingleTaskActivity2"
            android:launchMode="singleTask" />
        <activity android:name=".singletask.SingleTaskActivity3" />

    </application>

</manifest>